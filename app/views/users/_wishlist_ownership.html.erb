<% provide(:title, @title) %>

<div class="row">

  <div class="col-md-1">
    <%= render 'shared/user_info' %>
    <%= render 'shared/stats' %>
  </div>

  <div class="col-md-8">
    <h1><%= @title %></h1>
    <% if @games.any? %>
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th><%= sortable "name" %></th>
            <th><%= sortable "platform" %></th>
            <th><%= sortable "year" %></th>
            <th><%= sortable "genre" %></th>
          </tr>
        </thead>
        <tbody>
          <% @games.each do |game| %>
            <tr>
              <td><%= link_to game.name, game %></td>
              <td><%= game.platform %></td>
              <td><%= game.year %></td>
              <td><%= game.genre %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p>There's nothing here! Try <%= link_to "browsing some games", root_url %> and see if you find anything you like.</p>
    <% end %>
  </div>
</div>