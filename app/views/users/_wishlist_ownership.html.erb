<% provide(:title, @title) %>

<div class="row">

  <div class="col-md-1">
    <%= render 'shared/user_info' %>
    <%= render 'shared/stats' %>
  </div>

  <div class="col-md-8">
    <h1><%= @title %></h1>
    <% if @games.any? %>
      <ul class="games">
        <%= render @games %>
      </ul>
    <% else %>
      <p>There's nothing here! Try browsing some games and see if you find anything you like.</p>
    <% end %>
  </div>
</div>