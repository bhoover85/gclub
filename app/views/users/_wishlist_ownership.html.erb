<% provide(:title, @title) %>

<div class="row">
  <div class="col-md-12">
    <h1><%= @title %></h1>
    <% if @games.any? %>
      <ul class="games">
        <%= render @games %>
      </ul>
    <% else %>
      <p>There's nothing in your <%= @title.downcase %>! Try browsing some games and see if you find anything you like.</p>
    <% end %>
  </div>
</div>