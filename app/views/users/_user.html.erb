<li>
  <%= gravatar_for user, size: 52 %>
  <%= link_to user.email, user %>
  <% if current_user.admin? && !current_user?(user) %>
      <%= link_to "<i class='fa fa-ban'></i> Delete".html_safe, user, 
        class: "btn btn-danger pull-right", 
        method: :delete, 
        data: { confirm: "You sure?" }  %>
  <% end %>
</li>