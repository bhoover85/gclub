<div class="signin-register-buttons">
  <%- if controller_name != 'sessions' %>
    <%= link_to "<i class='fa fa-sign-in fa-2x'></i> Sign in with Great Games Club".html_safe, new_session_path(resource_name), class: "btn btn-primary btn-lg" %> <br />
  <% end -%>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to "<i class='fa fa-plus fa-2x'></i> Sign up for an account".html_safe, new_registration_path(resource_name), class: "btn btn-success btn-lg" %><br />
  <% end -%>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to "<i class='fa fa-question-circle fa-2x'></i> Forgot your password?".html_safe, new_password_path(resource_name), class: "btn btn-primary btn-lg" %><br />
  <% end -%>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name) %><br />
  <% end -%>

  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name) %><br />
  <% end -%>

  <%- if devise_mapping.omniauthable? %>
    <%- resource_class.omniauth_providers.each do |provider| %>
    
      <% if provider.to_s == "facebook" %>
        <% icon = 'fa-facebook-square' %>
        <% providerName = 'Facebook' %>
      <% elsif provider.to_s == "twitter" %>
        <% icon = 'fa-twitter' %>
        <% providerName = 'Twitter' %>
      <% elsif provider.to_s == "google_oauth2" %>
        <% icon = 'fa-google-plus' %>
        <% providerName = 'Google' %>
      <% elsif provider.to_s == "steam" %>
        <% icon = 'fa-sign-in' %>
        <% providerName = 'Steam' %>
      <% end %>

      <%= link_to "<i class='fa #{icon} fa-2x'></i> Sign in with #{providerName}".html_safe, omniauth_authorize_path(resource_name, provider), class: "btn btn-primary btn-lg btn-#{provider}" %><br />
    <% end -%>
  <% end -%>
</div>