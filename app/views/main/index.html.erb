<div class="row">

  <!-- Left Column -->
  <% if user_signed_in? %>
    <div class="col-md-1">
      <%= render 'shared/user_info' %>
      <%= render 'shared/stats' %>
    </div>
  <% end %>

  <!-- Middle Column -->
  <div class="col-md-8">
    <h3>
      <%= "Great Games of #{@filter}" %>
    </h3>
    <h4>
      <i class="fa fa-filter"></i> Filter: 
      <%= link_to "All",  root_url %> |
      <%= link_to "2014", '/year/2014' %> | 
      <%= link_to "2013", '/year/2013' %>
    </h4>
    <ul class="games">
      <%= render @games %>
    </ul>
  </div>

  <!-- Right Column -->
  <div class="col-md-3">
      
  </div>
</div>
