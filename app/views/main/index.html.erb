<% provide(:title, "#{@filter} Games") %>

<div class="row">

  <!-- User Info -->
  <%= render 'shared/user_section' %>

  <!-- Main Content -->
  <% if user_signed_in? %>
    <section id="main-content" class="col-md-8">
  <% else %>
    <section id="main-content" class="col-md-9">
  <% end %>
      <h2>
        <%= "#{@filter} Games" %>
      </h2>
      <h4>
        <i class="fa fa-filter"></i>  
        <%= link_to "All", root_url %> 
          <% Game.select("DISTINCT(PLATFORM)").each do |game| %>
            | <%= link_to game.platform, "/platform/#{game.platform}" %>
          <% end %>
      </h4>

      <ul class="games">
        <% @games.each do |game| %>
          <% @game = game %>
          
          <li>
            <article>
              <h3 class="pull-left"><%= link_to game.name, game %> <small><%= "#{game.platform}" %></small></h3>
              <h3 class="pull-right">
                <%= render 'games/actions/wishlist_form' %>
                <%= render 'games/actions/ownership_form' %>
              </h3>
              <div class="clearfix"></div>
              <blockquote>
                <%= image_tag(game.cover.url(:thumb), class: "pull-left game-thumbnail") %>
                <p><%= truncate(game.description, length: 275) %></p>
                <footer>Metacritic</footer>
              </blockquote>
            </article>

            <%= render 'users/wishlist_ownership_admin_buttons' %>

          </li>
        <% end %>
      </ul>

      <div class="text-center">
        <%= will_paginate @games %>
      </div>
    </section>

  <!-- About -->
  <section id="about" class="col-md-3">
      <%= render 'layouts/about' %>
      <%= render 'layouts/vertical_ad' %>
  </section>
</div>
