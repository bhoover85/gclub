      <%= render 'shared/user_info' %>
      <%= render 'shared/stats' %>
    </div>

    <div class="col-md-11">
  <% else %>
    <div class="col-md-12">
  <% end %>
    <div class="text-center">
      <%= will_paginate @games %>
    </div>

    <%= render 'shared/games_table' %>

    <div class="text-center">
      <%= will_paginate @games %>
    </div>
  </div>
</div>