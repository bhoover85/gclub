<div class="row">
  <div class="col-md-12">
    <section>
      <h3><%= @wishers.count %> Want This</h3>
    </section>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <% if @wishers.any? %>
      <% @wishers.each do |wisher| %>
        <%= link_to gravatar_for(wisher, size: 54, class: "pull-left gravatar"), wisher_path(wisher) %>
      <% end %>
      <div><%= link_to "View All", game_wanted_path %></div>
    <% end %>
  </div>
</div>