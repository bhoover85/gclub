<% ownership_form_id = "ownership_form_#{@game.id}" %>

<div class='<%= ownership_form_id %> inline-block'>
  <% if user_signed_in? %>
    <% if current_user.owned?(@game) %>
      <%= render 'games/actions/remove_from_ownership' %>
    <% else %>
      <%= render 'games/actions/add_to_ownership' %>
    <% end %>
  <% else %>
    <%= link_to "Owned", new_user_registration_path, class: "btn btn-default btn-large" %> 
  <% end %>
</div>
