<% wishlist_form_id = "wishlist_form_#{@game.id}" %>

<div class='<%= wishlist_form_id %> inline-block'>
  <% if user_signed_in? %>
    <% if current_user.wished?(@game) %>
      <%= render 'games/actions/remove_from_wishlist' %>
    <% else %>
      <%= render 'games/actions/add_to_wishlist' %>
    <% end %>
  <% else %>
    <%= link_to "Wanted", new_user_registration_path, class: "btn btn-default btn-large" %> 
  <% end %>
</div>
