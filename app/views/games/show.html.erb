<% provide(:title, "#{@game.name} - #{@game.platform}") %>

<% metacritic_info(@game.name, @game.platform) %>
<% item_search(@game.name, @game.platform) %>

<% if @asin != "Error" %>
  <% item_lookup(@asin, "Accessories, EditorialReview, Images, ItemAttributes, OfferSummary, Reviews, SalesRank, Similarities") %>
<% end %>

<div class="row">
  <% if user_signed_in? %>
    <div class="col-md-1">
      <%= render 'shared/user_info' %>
      <%= render 'shared/stats' %>
    </div>
  <% end %>

  <% if user_signed_in? %>
    <div class="col-md-8">
  <% else %>
    <div class="col-md-9">
  <% end %>
    <%= render 'games/game_info' %>
  </div>

  <div class="col-md-3">
    <%= render 'games/amazon_info' %>
  </div>
</div>

